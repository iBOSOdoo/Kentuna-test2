        <record model="hr.salary.rule" id="kenya_salary_rule_gross_paye">
            <field name="name">Gross Paye</field>
            <field name="code">GROSS PAYE</field>
            <field name="category_id" ref="kenya_salary_rule_cat_gross_paye"/>
            <field name="sequence" eval="30"/>
            <field name="active" eval="True"/>
            <field name="appears_on_payslip" eval="True"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute"><![CDATA[taxable =categories.BASIC + categories.ALW - categories.DED
taxes = [(24000,10.0),(40667,15.0),(57333,20.0),(99999999999,25.0)]
tax = 0
taxed = 0
for tup_tax in taxes:
    tax_slab=tup_tax[0]
    tax_rate=tup_tax[1]
    tax_apply_on=(taxable < tax_slab) and taxable or tax_slab
    tax+=(tax_apply_on-taxed)*(tax_rate/100)
    taxed=tax_apply_on
result=tax]]></field>
            <field name="quantity" eval="1"/>
        </record>

